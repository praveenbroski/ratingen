<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/clr_222B45</item>
        <item name="android:textColorHint">@color/clr_8F9BB3</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/clr_white</item>
        <item name="android:statusBarColor">@color/clr_F2F2F2</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/clr_white</item>
    </style>
