<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/clr_white" android:startColor="@color/clr_white" android:type="linear" />

                    <stroke android:width="@dimen/_1sdp" android:color="@color/clr_E4E9F2" />

                    <corners android:radius="@dimen/_4sdp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
                </shape>
            </item>

            <item android:right="@dimen/_12sdp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_down_spinner" />
            </item>
        </layer-list>
    </item>

</selector>