<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/clr_transparent" />
            <stroke android:color="@color/clr_5497FF" android:width="@dimen/_1sdp" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/clr_transparent" />
            <stroke android:color="@color/clr_5497FF" android:width="@dimen/_1sdp" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/clr_transparent" />
            <stroke android:color="@color/clr_E4E9F2" android:width="@dimen/_1sdp" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/clr_form_disabled" />
            <stroke android:color="@color/clr_E4E9F2" android:width="@dimen/_1sdp" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

</selector>