<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/while_light"
        android:gravity="center"
        android:padding="@dimen/_11sdp"
        android:text="@string/Txt_ChooseSeat"
        android:textColor="@color/clr_black"
        android:textSize="@dimen/_15sdp"
        android:textStyle="normal"
        android:typeface="sans"
        />




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/CSB_One_layout"
        android:background="@color/clr_white"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:layout_width="match_parent"
            android:padding="@dimen/_6sdp"
            android:background="@color/clr_white"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/_25sdp"
        app:srcCompat="@drawable/ic_one_user"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/_25sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/txt_oneUser"
        android:layout_marginStart="@dimen/_15sdp"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/clr_black1"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />
</LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/tv_currency1"
                    android:layout_width="wrap_content"
                    android:text="$"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="@color/clr_black1"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/cost_for_one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="00"
                    android:textColor="@color/clr_black1"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold" />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/CSB_Two_layout"
        android:background="@color/clr_white"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp">

        <RelativeLayout

            android:layout_width="match_parent"
            android:padding="@dimen/_6sdp"
            android:background="@color/clr_white"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/_25sdp"
        app:srcCompat="@drawable/ic_two_user"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/_25sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/txt_twoUser"
        android:layout_marginStart="@dimen/_15sdp"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        android:textColor="@color/clr_black1"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />
</LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_alignParentRight="true">
                <TextView
                    android:id="@+id/tv_currency2"
                    android:layout_width="wrap_content"
                    android:text="$"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="@color/clr_black1"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/cost_for_two"
                    android:layout_width="wrap_content"
                    android:text="00"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="@color/clr_black1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>




</LinearLayout>