<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/while_light">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:cardBackgroundColor="@color/while_light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/qrEnter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:background="@drawable/edit_text_border"
                android:hint="@string/enter_private_key"
                android:padding="@dimen/_5sdp" />

            <ImageView
                android:id="@+id/or_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qrEnter"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                app:srcCompat="@drawable/ic_group_4" />

            <TextView
                android:id="@+id/qr_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/or_img"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/scan_qr"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/submit_butt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_below="@+id/qr_scan"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:background="@color/colorPrimary"
                android:textColor="@color/while_light" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/submit_butt" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>