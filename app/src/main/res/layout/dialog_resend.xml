<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_white">

    <TextView
        android:id="@+id/resend_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:textSize="@dimen/_14sdp" />

    <TextView
        android:id="@+id/resend_txt_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_toEndOf="@+id/resend_txt"
        android:text="123456789"
        android:textSize="@dimen/_14sdp" />

    <Button
        android:id="@+id/resend_butt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resend_txt"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@drawable/border_curve"
        android:text="Resend"
        android:textColor="@color/clr_white" />

    <Button
        android:id="@+id/cancel_butt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resend_butt"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_35sdp"
        android:background="@drawable/border_gray"
        android:text="Cancel"
        android:textColor="@color/clr_white" />

</RelativeLayout>