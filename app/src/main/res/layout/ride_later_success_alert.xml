<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_later_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:gravity="center"
        android:fontFamily="@font/sf_semibold"
        android:textColor="@color/clr_black"
        android:textSize="@dimen/_18sdp"
        android:textAllCaps="true"
        android:text="TRIP SCHEDULE" />

    <TextView
        android:id="@+id/txt_later_alert_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_23sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:gravity="center"
        android:fontFamily="@font/sf_medium"
        android:textColor="@color/clr_black"
        android:textSize="@dimen/_15sdp"
        android:text="Your trip has Scheduled" />

    <TextView
        android:id="@+id/txt_later_alert_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:gravity="center"
        android:fontFamily="@font/sf_medium"
        android:textColor="@color/clr_FB4A46"
        android:textSize="@dimen/_15sdp"
        android:text="At Fri, Jan 2020  03:45 PM" />

    <TextView
        android:id="@+id/txt_later_alert_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:gravity="center"
        android:fontFamily="@font/sf_regular"
        android:textColor="@color/clr_black"
        android:textSize="@dimen/_14sdp"
        android:text="Note :  You cannot initiate any trip between Fri, jan 2020 03:45PM  to 04:45PM" />

    <Button
        android:id="@+id/submit"
        style="?attr/buttonBarButtonStyle"
        android:background="@drawable/btn_primary"
        android:layout_width="@dimen/_88sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textColor="@color/clr_white"
        android:textSize="@dimen/_15sdp"
        android:text="OK" />

</LinearLayout>